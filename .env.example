# SmartPlant Production Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=5001

# Database Configuration
DATABASE_PATH=./server/production.sqlite
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Security Configuration
API_KEY=your-secure-api-key-here
JWT_SECRET=your-jwt-secret-key
CORS_ORIGIN=http://localhost:3000,http://192.168.1.100:3000

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=alerts@yourdomain.com

# Monitoring & Alerts
ENABLE_ALERTS=true
LOW_BATTERY_THRESHOLD=20
OFFLINE_ALERT_MINUTES=30
PUMP_FAILURE_ALERT=true

# System Limits
MAX_PUMP_RUNTIME_MINUTES=5
DATA_RETENTION_DAYS=365
MAX_DAILY_WATERING_CYCLES=10

# Hardware Configuration
ARDUINO_TIMEOUT_MINUTES=10
SENSOR_CALIBRATION_SOIL_DRY=4095
SENSOR_CALIBRATION_SOIL_WET=1500